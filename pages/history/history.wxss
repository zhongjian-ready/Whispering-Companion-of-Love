/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 15rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #2e7d32;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #4caf50;
}

/* 日期选择和当日统计 */
.day-summary {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
}

.day-total {
  font-size: 42rpx;
  font-weight: 700;
  color: #4fc3f7;
}

.day-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.day-status.completed {
  background: #e8f5e8;
  color: #2e7d32;
}

.day-status.incomplete {
  background: #fff3e0;
  color: #f57c00;
}

.day-progress {
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.day-progress .progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
}

.day-progress .progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4fc3f7, #29b6f6);
  border-radius: 6rpx;
}

.day-progress .progress-text {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
}

/* 记录列表 */
.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #4fc3f7;
}

.record-time {
  font-size: 24rpx;
  margin-top: 5rpx;
}

.record-note {
  font-size: 26rpx;
  color: #999;
  background: #f5f5f5;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 30rpx;
  background: #fafafa;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 趋势图 */
.chart-container {
  margin-top: 20rpx;
}

.chart {
  display: flex;
  align-items: flex-end;
  height: 200rpx;
  gap: 15rpx;
  padding: 0 10rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding-bottom: 20rpx;
}

.chart-bar {
  flex: 1;
  background: linear-gradient(180deg, #4fc3f7, #29b6f6);
  border-radius: 8rpx 8rpx 0 0;
  position: relative;
  min-height: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 10rpx;
}

.bar-value {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.chart-labels {
  display: flex;
  gap: 15rpx;
  padding: 15rpx 10rpx 0;
}

.chart-label {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

/* 成就卡片 */
.achievement-card {
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
}

.achievement-list {
  margin-top: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 15rpx;
  margin-bottom: 15rpx;
}

.achievement-item:last-child {
  margin-bottom: 0;
}

.achievement-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f57c00;
  margin-bottom: 5rpx;
}

.achievement-desc {
  font-size: 26rpx;
}
